<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtMovieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên phim"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtMovieDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:inputType="textMultiLine"
            android:minLines="2" />

        <EditText
            android:id="@+id/edtMoviePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá vé"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtMovieStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày khởi chiếu (dd/MM/yyyy)"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtMovieImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link ảnh"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/edtMovieBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link ảnh banner"
            android:inputType="textUri" />

        <!-- Thêm các trường mới -->
        <EditText
            android:id="@+id/edtMovieVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Video URL"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/edtMovieDirector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đạo diễn"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtMovieCast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Diễn viên"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/edtMovieLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngôn ngữ"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtMovieDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thời lượng (phút)"
            android:inputType="number" />

        <Spinner
            android:id="@+id/spnMovieCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/prompt_select_category"/>
    </LinearLayout>
</ScrollView>
